---
import '../styles/globals.css'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="peace">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Peace Houston - Resources and Support" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4VTH5QR11P"></script>    
    <script>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-4VTH5QR11P');
    </script>
  </head>
  <body>
    <div class="layout-content-wrapper">
       <slot />
    </div>
    <slot name="footer" />
  </body>
</html>

<style is:global>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    background: var(--hero-gradient);
  }
  
  main, article {
    margin: 0;
    padding: 0;
  }
  
  section:not(#calendar):not(#welcome) {
    /* Keep section-specific background if needed, or remove if layout wrapper handles it */
    /* background: var(--hero-gradient); */ 
  }

  /* Define the wrapper styles */
  .layout-content-wrapper {
    max-width: theme('screens.7xl', '1366px'); /* Consistent max-width (using Tailwind config or fallback) */
    margin-left: auto;
    margin-right: auto;
    padding-left: theme('padding.4', '1rem'); /* Consistent padding (using Tailwind config or fallback) */
    padding-right: theme('padding.4', '1rem');
  }

  /* Responsive padding adjustments (Optional, based on Tailwind defaults) */
  @media (min-width: 640px) {
    .layout-content-wrapper {
      padding-left: theme('padding.6', '1.5rem');
      padding-right: theme('padding.6', '1.5rem');
    }
  }
  @media (min-width: 1024px) {
    .layout-content-wrapper {
      padding-left: theme('padding.8', '2rem');
      padding-right: theme('padding.8', '2rem');
    }
  }

</style>