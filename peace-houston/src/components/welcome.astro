---
import background from '../assets/background.svg';
---

<section id="welcome">
	<div class="welcome-container">
		<div class="welcome-text">
			<h2>Welcome to Peace Houston</h2>
			<!--	 <p>Your welcome message here...</p> -->
			<button class="live-chat-button">Start Live Chat</button>
		</div>
		<div class="welcome-video">  
			<iframe 
				src="https://www.youtube.com/embed/tjQwe3K3aW0?si=Do25mGisVDos0atW&autoplay=1&mute=1"
				frameborder="0" 
				allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
				referrerpolicy="strict-origin-when-cross-origin"
				allowfullscreen>
			</iframe>
		</div>
	</div>
</section>

<style>
	.welcome-container {
		display: flex;
		gap: 30px;
		padding-left: 20px;
		padding-right: 20px;
		padding-top: 20px;
		padding-bottom: 20px;
		align-items: center;
	}

	.welcome-text {
		flex: 0 0 27%;
		text-align: center;
	}

	.welcome-video {
		flex: 1 0 70%;
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 500px;
		overflow: hidden;
	}

	.welcome-video iframe {
		aspect-ratio: 16/9;
		height: min(500px, 100%);
		width: min(100%, 889px);
		border-radius: 4%;
	}

	h2, p {
		color: var(--text-light);
		margin: 0;
	}

	h2 {
		margin-bottom: 1rem;
	}
	.live-chat-button {
		margin-top: 20px;
		padding: 10px 20px;
		background-color: #20c18e;
		color: var(--text-light);
		border: none;
		border-radius: 25px;
		cursor: pointer;
	}

	@media (max-width: 768px) {
		.welcome-container {
			flex-direction: column;
			align-items: stretch;
			gap: 20px;
		}

		.welcome-text,
		
		.welcome-video {
			min-height: auto;
		}
	}
</style>
