---
import brightHouston from '../assets/bright_houston_graphic.png';
import bottomOfWebsitePhoto from '../assets/bottom_of_website_photo.png';

---

<!-- Removed the outer container div (max-w-7xl, mx-auto, px-) -->
<!-- Added pt-8 (padding-top) for space above this component -->
<div class="pt-8">
    <!-- Update max-width on the wrapper div -->
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Move existing content inside the wrapper -->
        <div class="peace-chat-container peace-chat-start mb-4">
            <div class="peace-chat-avatar-placeholder">
                PH
            </div>
            <div class="peace-chat-content">
                 <div class="peace-chat-header">
                     <span>PeaceHouston</span>
                     <time datetime="15:56">3:56PM</time>
                 </div>
                <div class="peace-chat-bubble peace-chat-bubble-start">
                    Here's some info about us
                </div>
                <div class="peace-chat-footer">
                    Delivered
                </div>
            </div>
        </div>

        <!-- Removed padding from section, handled by layout/component wrapper -->
        <section id="about">
            <!-- Keep about-container for flex layout, but remove max-width/margin -->
            <div class="about-container"> 
                <div class="about-image-container">
                    <img 
                        src={bottomOfWebsitePhoto.src}
                        alt="Group of friends taking a selfie" 
                        class="about-image"
                        width={bottomOfWebsitePhoto.width}
                        height={bottomOfWebsitePhoto.height}
                    />
                </div>
                <div class="about-text-content text-center">
                    <h2>We are praying for you.</h2>
                    <p>PeaceHouston.com is a Love Your Neighbor Initiative of Bethel Church.</p>
                    <p>825 Bering Dr. Houston, TX 77057</p>
                </div>
            </div>
        </section>
    </div> {/* End of constrained wrapper */}
</div>

<style>
    #about {
        /* Removed padding: 60px 20px; */
        /* padding-top: 20px; */ /* Removed top padding entirely */
        padding-top: 0; /* Explicitly set top padding to 0 */
        margin-top: 0; /* Explicitly set top margin to 0 */
        padding-bottom: 30px; /* Reduced bottom padding */
        background: none;
        color: initial;
        display: flex; /* Keep flex for centering .about-container if needed, though margin:auto might be redundant now */
        justify-content: center; 
        align-items: center;
        /* min-height: 500px; Maybe not needed if content defines height */
    }

    .about-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        /* Removed max-width: 999px; */
        width: 100%; /* Take full width of parent */
        align-items: center;
        /* Removed margin: 0 auto; */
    }

    .about-image-container {
        flex: 1;
        min-width: 300px; /* Adjusted min-width back for responsiveness */
        max-width: 700px; /* Adjusted max-width back */
        filter: drop-shadow(1px 2px 13.9px rgba(0, 0, 0, 0.25));
        @supports (filter: drop-shadow(1px 2px 13.9px color(display-p3 0 0 0 / 0.25))) {
            filter: drop-shadow(1px 2px 13.9px color(display-p3 0.000 0.000 0.000 / 0.25));
        }
    }

    .about-image {
        display: block;
        width: 100%;
        height: auto;
        border-radius: 15px;
        background: #FFAC72;
    }
    
    .about-text-content {
        flex: 1.5;
        min-width: 300px;
        font-family: 'Radio Canada Big', sans-serif;
        font-style: normal;
        font-weight: 500;
        font-size: clamp(1rem, 1.2vw + 0.5rem, 1.5rem);
        line-height: 1.6;
        color: color(display-p3 0.176 0.333 0.357);
        color: #1C565C;
    }

    .about-text-content h2 {
        font-size: clamp(2.5rem, 5vw + 1rem, 4rem);
        line-height: 1.3;
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 500;
        color: inherit;
    }

    .about-text-content p {
        margin-bottom: 8px;
    }

    @media (max-width: 768px) {
        .about-container {
            flex-direction: column;
            gap: 30px;
            text-align: center;
        }

        .about-image-container {
             max-width: 90%; /* Keep mobile adjustments */
             margin: 0 auto;
        }
        
        .about-text-content {
            flex: 1;
            text-align: left;
        }
    }
</style>